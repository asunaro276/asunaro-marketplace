{
  "name": "plugin-project-fit",
  "description": "プロジェクト固有の情報を分析してスキルに適用するプラグイン。既存のスキルにプロジェクトの慣習やアーキテクチャを組み込みます。",
  "version": "1.0.0",
  "author": {
    "name": "asunaro276",
    "url": "https://github.com/asunaro276"
  },
  "mcpServers": {
    "serena": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide-assistant",
        "--project",
        "${pwd}"
      ],
      "env": {}
    }
  }
}
